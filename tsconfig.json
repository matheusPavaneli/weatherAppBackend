{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "strict": true,
    "sourceMap": true,
    "rootDir": "./src",
    "removeComments": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ], 
  "ts-node": {
    "files": true
  }
}
